{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "attach",
      "name": "Attach to server",
      "port": 9229
    },
    {
      "type": "node",
      "name": "Without Nodemon",
      "request": "launch",
      "program": "${workspaceFolder}/index.js"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Debug tests",
      "runtimeExecutable": "npm",
      "runtimeArgs": [
        "run-script",
        "test-debug"
      ],
      "port": 32323
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Debug current file",
      "runtimeExecutable": "npm",
      "runtimeArgs": [
        "run-script",
        "test-debug",
        "${file}"
      ],
      "port": 32323
    }
  ]
}